# Optional LLM keys (no keys = heuristic mode)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
COLEARNER_MODEL=

# Optional broker overrides
COLEARNER_BROKERS=127.0.0.1:39092
COLEARNER_BUS=kafka

# Scope restriction for file access
COLEARNER_SCOPE_ROOT=

# Safety limits (optional)
COLEARNER_MAX_ITERATIONS=12
COLEARNER_MAX_FILE_BYTES=262144
COLEARNER_MAX_RUN_BYTES=1048576
COLEARNER_ALLOWED_EXTENSIONS=.md,.txt,.json,.yaml,.yml,.toml,.ini,.ts,.tsx,.js,.jsx,.go,.py,.java,.rs,.sql,.proto,.graphql,.css,.scss,.html,.xml,.sh,.bash,.zsh
